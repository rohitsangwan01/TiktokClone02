<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SocialSignupActvity">

    <LinearLayout
        android:paddingRight="20dp"
        android:paddingTop="30dp"
        android:paddingLeft="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Getting Started"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            app:fontFamily="@font/montserrat_bold" />

        <LinearLayout
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sign_up_tv"
                android:textStyle="bold"
                android:textColor="@color/darkerGrey"
                android:textSize="25sp"
                android:fontFamily="@font/kanit"
                android:gravity="center"
                android:text="Sign Up"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:textStyle="bold"
                android:id="@+id/login_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/kanit"
                android:gravity="center"
                android:text="Login"
                android:textColor="@color/grey"
                android:textSize="25sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/email_tv"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_bold"
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"/>

        <EditText
            android:id="@+id/email_et"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/grey"
            android:drawableLeft="@drawable/icon_mail"
            android:drawablePadding="15dp"
            android:fontFamily="@font/montserrat"
            android:hint="Enter email"
            android:paddingBottom="18dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/phone_tv"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_bold"
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"/>

        <EditText
            android:id="@+id/phone_et"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/grey"
            android:drawableLeft="@drawable/icons8_phone_24"
            android:drawablePadding="15dp"
            android:fontFamily="@font/montserrat"
            android:hint="Enter mobile no."
            android:paddingBottom="18dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/username_tv"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat_bold"
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"/>

        <EditText
            android:id="@+id/username_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/grey"
            android:drawableLeft="@drawable/icon_username"
            android:drawablePadding="15dp"
            android:fontFamily="@font/montserrat"
            android:hint="Enter username"
            android:paddingBottom="18dp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat_bold"
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"/>

        <EditText
            android:inputType="textPassword"
            android:drawableRight="@drawable/icon_eye"
            android:drawablePadding="15dp"
            android:drawableLeft="@drawable/icon_lock"
            android:textColor="@android:color/black"
            android:fontFamily="@font/montserrat"
            android:backgroundTint="@color/grey"
            android:layout_marginTop="10dp"
            android:paddingBottom="18dp"
            android:hint="Enter password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/cf_password_tv"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat_bold"
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Password"/>

        <EditText
            android:id="@+id/cf_password_et"
            android:inputType="textPassword"
            android:drawablePadding="15dp"
            android:drawableLeft="@drawable/icon_lock"
            android:textColor="@android:color/black"
            android:fontFamily="@font/montserrat"
            android:backgroundTint="@color/grey"
            android:layout_marginTop="10dp"
            android:paddingBottom="18dp"
            android:hint="Enter password again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:textColor="@android:color/white"
            android:textAllCaps="true"
            android:text="Next"
            android:background="@drawable/bg_button_purple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</ScrollView>