<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:weightSum="10"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_weight="9"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="0dp">


        <ImageView
            android:transitionName="img"
            android:src="@drawable/logo_main"
            android:layout_width="140dp"
            android:layout_height="140dp"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/tajawal_black"
            android:textSize="40sp"
            android:text="Sign in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout

            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView

                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <LinearLayout
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/google_signin"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:background="@drawable/white_bg_rounded"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <ImageView
                        android:layout_marginRight="10dp"
                        android:src="@drawable/icon_google"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>

                    <TextView
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="16dp"
                        android:textColor="@android:color/holo_blue_dark"
                        android:text="Login with Google"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                android:layout_width="wrap_content"
                android:layout_height="70dp">

                <LinearLayout
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:background="@drawable/white_bg_rounded"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp">

                    <ImageView
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/icon_facebook"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>

                    <TextView
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_blue_dark"
                        android:text="Login with Facebook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@android:color/darker_gray"
                android:text="or sign in using your phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@android:color/black"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <LinearLayout
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:backgroundTint="@android:color/black"
                    android:id="@+id/phone"
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@drawable/white_bg_rounded"
                    android:layout_width="match_parent"
                    android:layout_height="55dp">

                    <ImageView
                        android:tint="@color/white"
                        android:layout_marginRight="15dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icons8_phone_24" />
                    <TextView
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:text="Login with Phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

<!--        <TextView-->
<!--            android:onClick="onClickPrivacyPolicy"-->
<!--            android:fontFamily="@font/montserrat"-->
<!--            android:textSize="15sp"-->
<!--            android:lineSpacingExtra="5dp"-->
<!--            android:layout_marginTop="30dp"-->
<!--            android:gravity="center"-->
<!--            android:layout_marginLeft="20dp"-->
<!--            android:layout_marginRight="20dp"-->
<!--            android:textColor="@android:color/white"-->
<!--            android:text="@string/privacy_policy_alert"-->
