<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalInfoActvity">

    <LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

<!--            <ImageView-->
<!--                android:src="@drawable/icon_back_50"-->
<!--                android:layout_width="30dp"-->
<!--                android:layout_height="30dp"-->
<!--                app:tint="#000" />-->

            <TextView
                android:textSize="15sp"
                android:fontFamily="@font/montserrat_bold"
                android:layout_centerInParent="true"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perfecting Personal Information"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="70dp"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/img"
                android:background="?actionBarItemBackground"
                android:src="@drawable/icon_user_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ImageView
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_edit_pencil"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_bold"
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"/>

        <EditText
            android:id="@+id/name"
            android:textColor="@android:color/black"
            android:fontFamily="@font/montserrat"
            android:backgroundTint="@color/grey"
            android:layout_marginTop="10dp"
            android:paddingBottom="18dp"
            android:hint="Enter Username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/male_option"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/icons8_male_user_64"/>

            <ImageView
                android:id="@+id/female_option"
                android:alpha="0.3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/icons8_female_profile_64"/>

        </LinearLayout>

        <TextView
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Birthday"/>


        <com.aigestudio.wheelpicker.widgets.WheelDatePicker
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/date_picker"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/reg"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:textColor="@android:color/white"
            android:textAllCaps="true"
            android:text="Register"
            android:background="@drawable/bg_button_purple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
    </LinearLayout>

</ScrollView>