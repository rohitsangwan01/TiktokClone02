<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="10dp"
    tools:context=".VideoPostActivity">

    <ImageView
        android:id="@+id/back_btn"
        android:background="?actionBarItemBackground"
        android:layout_marginVertical="14dp"
        android:tint="@android:color/black"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_desc"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@id/back_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:maxLength="35"
            android:id="@+id/et_desc"
            android:padding="8dp"
            android:gravity="top"
            android:hint="Description (max 35 chars.)"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="150dp"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_marginHorizontal="15dp"
        android:id="@+id/ctg_list1"
        android:layout_below="@id/card_desc"
        android:layout_margin="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:onClick="selectCategory"
            android:id="@+id/entertainment_tv"
            android:foreground="?selectableItemBackground"
            android:layout_weight="1"
            android:padding="3dp"
            android:gravity="center"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#entertainment"
            android:background="@drawable/hash_tag_bg"/>
        <TextView
            android:onClick="selectCategory"
            android:id="@+id/drama_tv"
            android:foreground="?selectableItemBackground"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="3dp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#drama"
            android:background="@drawable/hash_tag_bg"/>
        <TextView
            android:onClick="selectCategory"
            android:id="@+id/romantic_tv"
            android:foreground="?selectableItemBackground"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="3dp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#romantic"
            android:background="@drawable/hash_tag_bg"/>
        <TextView
            android:onClick="selectCategory"
            android:id="@+id/all_tv"
            android:foreground="?selectableItemBackground"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:padding="3dp"
            android:gravity="center"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#all"
            android:background="@drawable/hash_tag_bg"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginHorizontal="15dp"
        android:layout_below="@id/ctg_list1"
        android:id="@+id/ctg_list2"
        android:layout_margin="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:onClick="selectCategory"
            android:id="@+id/emotional_tv"
            android:foreground="?selectableItemBackground"
            android:layout_weight="1"
            android:padding="3dp"
            android:gravity="center"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#emotional"
            android:background="@drawable/hash_tag_bg"/>
        <TextView
            android:onClick="selectCategory"
            android:id="@+id/india_tv"
            android:foreground="?selectableItemBackground"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="3dp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#india"
            android:background="@drawable/hash_tag_bg"/>
        <TextView
            android:onClick="selectCategory"
            android:id="@+id/talent_tv"
            android:foreground="?selectableItemBackground"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="3dp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#talent"
            android:background="@drawable/hash_tag_bg"/>

        <TextView
            android:onClick="selectCategory"
            android:id="@+id/random_tv"
            android:foreground="?selectableItemBackground"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="3dp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#random"
            android:background="@drawable/hash_tag_bg"/>


    </LinearLayout>

    <TextView
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/post_video"
        android:layout_marginTop="20dp"
        android:paddingVertical="8dp"
        android:paddingHorizontal="40dp"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_button_purple"
        android:text="POST"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>