<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<!--        <LinearLayout-->
<!--            android:id="@+id/bulgefun_close_layout"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:orientation="horizontal">-->

<!--            -->

<!--        </LinearLayout>-->

        <HorizontalScrollView
            android:id="@+id/sv_options"
            android:layout_marginBottom="10dp"
            android:scrollbars="none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/bulgefun_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <Button
                    android:textSize="15sp"
                    android:background="@drawable/camera_option_bg"
                    android:backgroundTint="@android:color/darker_gray"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@android:color/white"
                    android:id="@+id/clear_bulge_button"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="NONE" />

                <Button
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bulge_option_bg"
                    android:id="@+id/bulge_fun1_button"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="Fun1" />

                <Button
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bulge_option_bg"
                    android:id="@+id/bulge_fun2_button"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="Fun2" />

                <Button
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bulge_option_bg"
                    android:id="@+id/bulge_fun3_button"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="Fun3" />

                <Button
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bulge_option_bg"
                    android:id="@+id/bulge_fun4_button"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="Fun4" />

                <Button
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bulge_option_bg"
                    android:id="@+id/bulge_fun5_button"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="Fun5" />

                <Button
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bulge_option_bg"
                    android:id="@+id/bulge_fun6_button"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="Fun6" />

            </LinearLayout>

        </HorizontalScrollView>

        <Button
            android:backgroundTint="@color/red"
            android:textColor="@android:color/white"
            android:background="@drawable/camera_option_bg"
            android:layout_marginVertical="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/sv_options"
            android:id="@+id/close_bulge_button"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="close" />

    </RelativeLayout>
</layout>