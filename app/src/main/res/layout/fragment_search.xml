<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="10dp"
    tools:context=".SearchFragment">

   <EditText
       android:paddingLeft="12dp"
       android:drawablePadding="10dp"
       android:id="@+id/edt_search_box"
       android:layout_width="match_parent"
       android:layout_height="45sp"
       android:background="@drawable/search_bg"
       android:drawableTint="#4E4E4E"
       android:hint="Search..."
       android:imeOptions="actionSearch"
       android:inputType="text"
       android:drawableStart="@drawable/ic_outline_search_24"
       android:layout_margin="5sp"/>

    <TextView
        android:layout_margin="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Popular Hashtags"
        android:fontFamily="@font/kanit"
        android:textColor="#006B9B"/>

    <LinearLayout
        android:layout_margin="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt1"
            android:foreground="?selectableItemBackground"
            android:layout_weight="1"
            android:padding="3dp"
            android:gravity="center"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#hindi"
            android:background="@drawable/hash_tag_bg"/>
        <TextView
            android:id="@+id/txt2"
            android:foreground="?selectableItemBackground"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="3dp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#malayalam"
            android:background="@drawable/hash_tag_bg"/>
        <TextView
            android:id="@+id/txt3"
            android:foreground="?selectableItemBackground"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="3dp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#fun"
            android:background="@drawable/hash_tag_bg"/>
        <TextView
            android:id="@+id/txt4"
            android:foreground="?selectableItemBackground"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:padding="3dp"
            android:gravity="center"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#dance"
            android:background="@drawable/hash_tag_bg"/>

    </LinearLayout>
    <LinearLayout
        android:layout_margin="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt5"
            android:foreground="?selectableItemBackground"
            android:layout_weight="1"
            android:padding="3dp"
            android:gravity="center"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#trending"
            android:background="@drawable/hash_tag_bg"/>
        <TextView
            android:id="@+id/txt6"
            android:foreground="?selectableItemBackground"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="3dp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#comedy"
            android:background="@drawable/hash_tag_bg"/>
        <TextView
            android:id="@+id/txt7"
            android:foreground="?selectableItemBackground"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="3dp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#fight"
            android:background="@drawable/hash_tag_bg"/>


    </LinearLayout>
</LinearLayout>