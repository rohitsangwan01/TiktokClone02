<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:backgroundTint="@color/red"
            android:textColor="@android:color/white"
            android:background="@drawable/camera_option_bg"
            android:layout_marginVertical="10dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/close_sticker_button"
            android:layout_above="@id/sticker_recyclerview"
            android:text="close"
            android:layout_width="60dp"
            android:layout_height="30dp"/>
        <Button
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:background="@drawable/camera_option_bg"
            android:backgroundTint="@android:color/darker_gray"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/clear_sticker_button"
            android:layout_above="@id/close_sticker_button"
            android:text="NONE"
            android:layout_width="wrap_content"
            android:layout_height="40dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/sticker_recyclerview"
            android:layout_above="@id/sticker_category_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/sticker_category_recyclerview"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</layout>
